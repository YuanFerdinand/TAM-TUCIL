<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling"
    android:layout_gravity="center"
    android:padding="16dp"
    android:background="@color/background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

        <TextView
            android:id="@+id/tv_alarm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Button"
            android:drawableLeft="@drawable/ic_alarm"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Set your reminder"
            android:textColor="@color/font"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_alarm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alarm1"
            android:layout_marginTop="24dp"
            android:background="@color/Button"
            android:drawableLeft="@drawable/ic_alarm"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Set your reminder"
            android:textColor="@color/font"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_alarm3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alarm2"
            android:layout_marginTop="24dp"
            android:background="@color/Button"
            android:drawableLeft="@drawable/ic_alarm"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Set your reminder"
            android:textColor="@color/font"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_alarm4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alarm2"
            android:layout_marginTop="24dp"
            android:background="@color/Button"
            android:drawableLeft="@drawable/ic_alarm"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Set your reminder"
            android:textColor="@color/font"
            android:textSize="24sp"
            android:textStyle="bold" />


</LinearLayout>


</androidx.core.widget.NestedScrollView>